{
    "manifest_version": 3,
    "name": "Merlin Database Export/Import",
    "version": "0.2.6",
    "description": "The tool helps users manage and backup data for Merlin accounts, allowing them to easily switch accounts",
    "author": "Scipline",
    "host_permissions": ["https://app.getmerlin.in/*"],
    "permissions": ["tabs", "scripting", "activeTab", "storage", "notifications"],
    "action": {
        "default_popup":"popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "notifications": {
            "allowed": []
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [{
            "matches": ["https://app.getmerlin.in/*"],
            "js": ["contentScript.js"]

        }
    ]

}
